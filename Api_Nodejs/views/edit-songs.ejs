<%- include('header') %>
    <div class="container">
        <form action="/edit-songs/<%= data.id %>" method="POST" role="form" enctype="multipart/form-data">
            <legend>Chỉnh sửa bài hát</legend>
            <div class="form-group">
                <label for="">Tên bài hát</label>
                <input type="text" class="form-control" name="title" value="<%= data.title %>">
            </div>
            <div class="form-group">
                <label for="">Album</label>
                <input type="text" class="form-control" name="album" value="<%= data.album %>">
            </div>
            <div class="form-group">
                <label for="">Nghệ sĩ</label>
                <input type="text" class="form-control" name="artist" value="<%= data.artist %>">
            </div>
            <div class="form-group">
                <label for="">Source</label>
                <input type="file" class="form-control" name="source" id="source" >
                <input type="hidden" name="source2" value="<%= data.source %>">
            </div>
            <div class="form-group">
                <label for="">Ảnh</label>
                <input type="file" class="form-control" name="image" id="image" value="<%= data.image %>">
                <input type="hidden" name="image2" value="<%= data.image %>">
            </div>
            <div class="form-group">
                <label for="">Duration</label>
                <input type="number" class="form-control" name="duration" value="<%= data.duration %>">
            </div>
            <button type="submit" class="btn btn-primary">Sửa</button>
        </form>


    </div>


    <%- include('footer') %>