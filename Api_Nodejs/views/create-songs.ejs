<%- include('header') %>
    <div class="container">
       <form action="/create-songs" method="POST" role="form" enctype="multipart/form-data">
        <legend>Form thêm mới</legend>
       
        <div class="form-group">
            <label for="">Tên bài hát</label>
            <input type="text" class="form-control" name="title" placeholder="Input title">
        </div>
        <div class="form-group">
            <label for="">Album</label>
            <input type="text" class="form-control" name="album" placeholder="Input album name">
        </div>
        <div class="form-group">
            <label for="">Nghệ sĩ</label>
            <input type="text" class="form-control" name="artist" placeholder="Input artist">
        </div>
        <div class="form-group">
            <label for="">Source</label>
            <input type="file" class="form-control" name="source" id="source" required>
        </div>
        <div class="form-group">
            <label for="">Ảnh</label>
            <input type="file" class="form-control" name="image" id="image" required>
        </div>
        
        <div class="form-group">
            <label for="">Duration</label>
            <input type="number" class="form-control" name="duration" placeholder="Input Duration">
        </div>
       
        <button type="submit" class="btn btn-primary">Thêm mới</button>
       </form>
       
        
    </div>
    
<%- include('footer') %>
